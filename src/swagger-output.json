                      "example": "USER_NOT_FOUND"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "USER_NOT_FOUND"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
