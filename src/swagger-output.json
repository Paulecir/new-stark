                    "id": {
                      "type": "number",
                      "example": 2
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "login": {
                      "type": "string",
                      "example": "johndoe"
                    },
                    "email": {
                      "type": "string",
                      "example": "johndoe@gmail.com"
                    },
                    "phone": {
                      "type": "string",
                      "example": "+5599999999999"
                    },
                    "profile": {
                      "type": "string",
