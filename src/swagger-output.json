    "/v1/auth/signin": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Realiza o login do usuário",
        "description": "Endpoint para autenticar o usuário e retornar um token JWT.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Login de usuário.",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "johndoe"
                },
                "password": {
                  "type": "string",
                  "example": "123456"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get a specific user.",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "example": "****"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "USER_NOT_FOUND"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "example": "USER_NOT_FOUND"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
